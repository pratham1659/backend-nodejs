{
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "build/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/books",
      "dest": "index.js"
    },
    {
      "src": "books/(.*)",
      "dest": "index.js"
    },
    {
      "src": "/",
      "dest": "build/index.html"
    },
    {
      "src": "/booklist",
      "dest": "build/index.html"
    },
    {
      "src": "/add-book",
      "dest": "build/index.html"
    },
    {
      "src": "/edit-book/**",
      "dest": "build/index.html"
    },
    {
      "src": "/(.+)",
      "dest": "build/$1"
    }
  ]
}
